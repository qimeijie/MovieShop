@model MovieListViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        @foreach (var movieCard in Model.MovieCards)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 col-6 justify-content-between my-3">
                <div class="card">
                    <a asp-controller="Movie" asp-action="Detail" asp-route-movieId="@movieCard.Id">
                        <img src="@movieCard.ImageUrl" class="card-img-top" alt="Movie Image">
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@(Model.CurrentPage - 1)" asp-route-genreId="@(Model.GenreId == null ? "" : Model.GenreId)">&lt;</a>
                </li>
            }
            <!-- First page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
                <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="1" asp-route-genreId="@(Model.GenreId == null ? "" : Model.GenreId)">1</a>
            </li>
            <!-- Left ellipsis -->
            @if (Model.CurrentPage > 4)
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }
            <!-- Pages near the current page -->
            @for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@i" asp-route-genreId="@(Model.GenreId == null ? "" : Model.GenreId)">@i</a>
                </li>
            }
            <!-- Right ellipsis -->
            @if (Model.CurrentPage < Model.TotalPages - 3)
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }

            <!-- Last page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@Model.TotalPages" asp-route-genreId="@(Model.GenreId == null ? "" : Model.GenreId)">@Model.TotalPages</a>
            </li>
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@(Model.CurrentPage + 1)" asp-route-genreId="@(Model.GenreId == null ? "" : Model.GenreId)">&gt;</a>
                </li>
            }
        </ul>
    </nav>
}
