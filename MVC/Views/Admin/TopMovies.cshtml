@model TopMoviesViewModel
@{
    ViewBag.Title = "Top Movies";
}
<h5>@ViewData["Title"]</h5>
<form asp-action="TopMovies" method="get">
    <div class="d-flex justify-content-center align-items-center gap-3 p-2" style="background-color:gray">
        <label asp-for="StartDate" class="form-label mb-0">StartDate </label>
        <input asp-for="StartDate" type="date" class="form-control w-auto" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        <label asp-for="EndDate" class="form-label mb-0">EndDate </label>
        <input asp-for="EndDate" type="date" class="form-control w-auto" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr class="fw-bold">
            <th>#</th>
            <th>Title</th>
            <th>Total Purchases</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Movies.Count(); i++)
        {
            var movie = Model.Movies.ElementAt(i);
            <tr>
                <td>@((Model.CurrentPage - 1) * Model.PageSize + i + 1)</td>
                <td>@movie.MovieTitle</td>
                <td>@movie.PurchaseCount</td>
            </tr>
        }
    </tbody>
</table>
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Admin" asp-action="TopMovies" asp-route-currentpage="@(Model.CurrentPage - 1)" asp-route-startdate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-enddate="@Model.EndDate?.ToString("yyyy-MM-dd")">&lt;</a>
                </li>
            }
            <!-- First page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
                <a class="page-link" asp-controller="Admin" asp-action="TopMovies" asp-route-currentpage="1" asp-route-startdate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-enddate="@Model.EndDate?.ToString("yyyy-MM-dd")">1</a>
            </li>
            <!-- Left ellipsis -->
            @if (Model.CurrentPage > 4)
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }
            <!-- Pages near the current page -->
            @for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                    <a class="page-link" asp-controller="Admin" asp-action="TopMovies" asp-route-currentpage="@i" asp-route-startdate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-enddate="@Model.EndDate?.ToString("yyyy-MM-dd")">@i</a>
                </li>
            }
            <!-- Right ellipsis -->
            @if (Model.CurrentPage < Model.TotalPages - 3)
            {
                <li class="page-item disabled"><a class="page-link">...</a></li>
            }

            <!-- Last page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
                <a class="page-link" asp-controller="Admin" asp-action="TopMovies" asp-route-currentpage="@Model.TotalPages" asp-route-startdate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-enddate="@Model.EndDate?.ToString("yyyy-MM-dd")">@Model.TotalPages</a>
            </li>
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Admin" asp-action="TopMovies" asp-route-currentpage="@(Model.CurrentPage + 1)" asp-route-startdate="@Model.StartDate?.ToString("yyyy-MM-dd")" asp-route-enddate="@Model.EndDate?.ToString("yyyy-MM-dd")">&gt;</a>
                </li>
            }
        </ul>
    </nav>
}