@model PaginationViewModel
<nav>
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@(Model.CurrentPage - 1)">&lt;</a>
            </li>
        }

        <!-- First page -->
        <li class="page-item @(Model.CurrentPage == 1 ? "active" : "")">
            <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="1">1</a>
        </li>

        <!-- Left ellipsis -->
        @if (Model.CurrentPage > 4)
        {
            <li class="page-item disabled"><a class="page-link">...</a></li>
        }

        <!-- Pages near the current page -->
        @for (int i = Math.Max(2, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages - 1, Model.CurrentPage + 2); i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@i">@i</a>
            </li>
        }

        <!-- Right ellipsis -->
        @if (Model.CurrentPage < Model.TotalPages - 3)
        {
            <li class="page-item disabled"><a class="page-link">...</a></li>
        }

        <!-- Last page -->
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "active" : "")">
            <a class="page-link" asp-controller="Movie" asp-action="Index" asp-route-currentpage="@Model.TotalPages">@Model.TotalPages</a>
        </li>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@(Model.CurrentPage + 1)">&gt;</a>
            </li>
        }
    </ul>
</nav>