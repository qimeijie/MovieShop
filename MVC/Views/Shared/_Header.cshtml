<header class="">
    <div class="row justify-content-between bg-black p-5 pb-2 pt-2">
        <div class="col-3">
            <div class="d-flex">
                <div class="m-2">
                    <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index">Movie Shop
                        <span>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
                                <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1zm4 0v6h8V1zm8 8H4v6h8zM1 1v2h2V1zm2 3H1v2h2zM1 7v2h2V7zm2 3H1v2h2zm-2 3v2h2v-2zM15 1h-2v2h2zm-2 3v2h2V4zm2 3h-2v2h2zm-2 3v2h2v-2zm2 3h-2v2h2z" />
                            </svg>
                        </span>
                    </a>
                </div>
                <div class="m-2">
                    @await Component.InvokeAsync("Genres")
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="d-flex">
                <div class="dropdown m-2">
                    <button class="dropdown-toggle text-light bg-black border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateMovie">CreateMovie</a></li>
                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="TopMovies">TopMovie</a></li>
                    </ul>
                </div>
                <div class="m-2">
                    <div class="dropdown">
                        <button class="dropdown-toggle text-light bg-black border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Lawson Klocko
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Movies">Movies</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Favorites">Favorites</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Account">Account</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>